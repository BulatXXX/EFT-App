<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.kotlinpracticemirea.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_bearFragment"
            app:destination="@id/bearFragment" />
        <action
            android:id="@+id/action_mainFragment_to_usecFragment"
            app:destination="@id/usecFragment" />
    </fragment>
    <fragment
        android:id="@+id/bearFragment"
        android:name="com.example.kotlinpracticemirea.BearFragment"
        android:label="fragment_bear"
        tools:layout="@layout/fragment_bear" />
    <fragment
        android:id="@+id/usecFragment"
        android:name="com.example.kotlinpracticemirea.UsecFragment"
        android:label="fragment_usec"
        tools:layout="@layout/fragment_usec" />
</navigation>