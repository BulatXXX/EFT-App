<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/icon_item"
        android:src="@color/white"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:marqueeRepeatLimit="marquee_forever"
        android:fadingEdge="horizontal"
        android:ellipsize="marquee"
        android:id="@+id/name_item"
        android:singleLine="true"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_item"
        android:textColor="@color/grey"
        android:fontFamily="@font/geometria_bold"
        android:textSize="24sp"
        android:text="red rebel ice peak"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:marqueeRepeatLimit="marquee_forever"
        android:fadingEdge="horizontal"
        android:id="@+id/price_item"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/geometria_medium"
        android:ellipsize="marquee"
        android:text="50000 RUB"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name_item"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>